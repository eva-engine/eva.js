{
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": ".",
    "outDir": "dist/types",
    "target": "es2016",
    "module": "esnext",
    "moduleResolution": "node",
    "allowJs": true,
    "noUnusedLocals": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "removeComments": true,
    "noEmitHelpers": true,
    "importHelpers": true,
    "sourceMap": false,
    "downlevelIteration": true,
    "noImplicitReturns": false,
    "noUnusedParameters": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "lib": [
      "esnext",
      "dom"
    ],
    "types": [
      "jest",
      "node"
    ],
    "paths": {
      "@eva/miniprogram-*": [
        "packages/eva-miniprogram-*/lib"
      ],
      "@eva/miniprogram-pixi": [
        "packages/miniprogram-pixi/lib"
      ],
      "@eva/*": [
        "packages/*/lib"
      ]
    }
  },
  "include": [
    "packages/global.d.ts",
    "packages/*/lib",
    "packages/*/__tests__",
    "examples"
  ]
}